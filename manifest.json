{
  "manifest_version": 3,
  "name": "CodeHint",
  "version": "1.0",
  "description": "Get helpful hints and solutions for coding problems based on your code.",
  "permissions": [
    "activeTab",
    "scripting" 
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://leetcode.com/*",
    "https://www.geeksforgeeks.org/*",
    "https://codeforces.com/*",
    "<all_urls>" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
